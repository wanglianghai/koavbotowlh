extends layout

block content
  //CAROUSEL
  .carousel.slide(id='myCarousel' data-ride='carousel')
    //indicators
    ol.carousel-indicators
      - for (let i = 0; i < indexs.length; i++)
        if i
          li(data-target='#myCarousel' data-slide-to=`${i}`)
        else
          li.active(data-target='#myCarousel' data-slide-to=`${i}`)

    //wrapper for slides
    .carousel-inner(role='listbox')
      - for (let i = 0; i < indexs.length; i++)
        if i
          .item
            img(src=`${indexs[i].imgsrc}` style="display:block;width:100%;height:100%" alt='Second slide')
        else
          .item.active
            img(src=`${indexs[i].imgsrc}` style="display:block;width:100%;height:100%"  alt='First slide')

    //Controls
    a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next
  //list product
  .container.center-block
    .text-center.feature-header
      h3(style='color:red') 技术
        strong 产品
    .row
    each pro in products
      .col-md-4
        img.center-block(src=`${pro.imgsrc}`)
        p
          strong= pro.bTitle
        p= pro.sTitle
  .container.feature-header
    .about(style=`background:url(${about[0].imgsrc});background-size:cover`)
      .foreground

